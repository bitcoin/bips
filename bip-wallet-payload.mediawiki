  ? 501 => uint64,         ; fee paid
  ? 502 => bool,           ; rbf
  ? 503 => bool,           ; abandoned/conflicted
  ? 504 => bool,           ; outgoing
  ? 505..599 => any,       ; reserved extension range
}

utxo-metadata = metadata .and {
  ? 600 => bool,           ; spendable
  ? 601 => bool,           ; frozen
  ? 602 => bool,           ; reserved for pending tx
