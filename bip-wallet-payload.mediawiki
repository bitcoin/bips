  0  => 1..255,             ; version
  1  => network-type,       ; network enum
  ? 2 => bstr .size 32,     ; genesis hash
  ? 3 => root,              ; master secret material
  10 => [+ account],        ; accounts
  ? 20 => [+ transaction],  ; transactions
  ? 30 => [+ utxo],         ; utxos
